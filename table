<table id="tfhover" class="tftable">
<tr><th>cell1</th><th>cell2</th></tr>
<tr><td>cell1</td><td>cell2</td></tr>


</table>




<input type="button" value="创建表格" onclick="creatTab()">
<div id="bigbox">
</div>

<script>


var div = document.getElementById("bigbox");
var anniu = document.createElement("button")
function creatTab(){
var rows = prompt("rows"," ");
var cols = prompt("cols"," ");


var th = document.createElement('th');

    var tab = '<table id="tfhover" class="tftable" border="1">'

            tab=tab+"<tr>";
        for(var j=0;j<cols;j++){
            tab+="<th>"+1+j+"</th>";
        }
        tab+="<tr/>";
    


    for(var i=0;i<rows;i++){
        tab=tab+"<tr>";
        for(var j=0;j<cols;j++){
            tab+="<td>"+i+j+"</td>";
        }
        tab+="<tr/>";
    }
    tab+='</table>';
    div.innerHTML=tab;
}



</script>



    






